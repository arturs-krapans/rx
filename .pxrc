-----------
-- .pxrc --
-----------

set vsync = off
set frame_delay = 8.0

map .        :zoom +
map ,        :zoom -
map /        :zoom 1.0
map j        :v/prev
map k        :v/next
map z        :v/center
map u        :undo
map r        :redo
map x        :swap
map b        :brush
map e        :brush/set erase {:brush/unset erase}
map ]        :brush/size +
map [        :brush/size -
map <ctrl>   :sampler {:sampler/off}
map <up>     :pan  0  1
map <down>   :pan  0 -1
map <left>   :pan -1  0
map <right>  :pan  1  0

source db32.palette

echo "vx 0.1.0"
